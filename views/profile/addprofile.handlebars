<div class="container">
    <h1 class="h1 display-6 text-left mt-4 text-light bg-dark p-1">add profile form</h1>
    <form action="/profile/addprofile" method="POST" enctype="multipart/form-data" class="mt-4">
  <div class="row">
       <div class="col">
      <input type="file" class="form-control" placeholder="upload photo" name="photo">
    </div>
    <div class="col-4 mt-2">
      <input type="text" class="form-control" placeholder="enter name" name="name">
    </div>
    <div class="col-4 mt-2">
      <input type="text" class="form-control" placeholder="enter phone number" name="phone number">
    </div>
     <div class="col-4 mt-2">
      <input type="text" class="form-control" placeholder="enter company" name="company">
    </div>
     <div class="col-4 mt-2">
      <input type="text" class="form-control" placeholder="enter location" name="location">
    </div>
     <div class="col-4 mt-2">
      <input type="text" class="form-control" placeholder="enter education details" name="education">
    </div>
     <div class="col-4 mt-2">
      <button type="submit" class="btn btn-dark"> submit </button>
    </div>
  </div>
</form>
{{#each errors}}
<div class="col-md-4" offset-4>
    <div class="alert alert-danger mt-2">{{text}}</div>
</div>
{{else}}
{{/each}}
</div>
